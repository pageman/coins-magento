<?xml version="1.0"?>
<config>
   <sections>
		<payment>
			<groups>
				<Gateway translate="label" module="paygate">
					<label>Coins PH</label>
					<sort_order>700</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
                    <comment><![CDATA[<h3>With Bitcoin, your customers can checkout online, even if they don't have a credit card or bank account</h3><b>Benefits:</b><br><ol><li>0% processing fees</li><li>Instant billing</li><li>No currency risk</li><li>Next day settlement</li></ol><br /><p>If you don't have one, sign up now at <a href="https://coins.ph/merchants/signup">https://coins.ph/merchants/signup</a></p><br />]]></comment>
					<fields>
						<active translate="label">
							<label>Enabled</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>0</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</active>
						
						<title translate="label">
							<label>Title</label>
							<frontend_type>text</frontend_type>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</title>
						
						<api_key translate="label">
							<label>Merchant ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_key>
						
						<api_key translate="label">
							<label>Merchant ID</label>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_key>
						
						<api_secret translate="label">
							<label>Merchant Secret Key</label>
							<frontend_type>password</frontend_type>
							<sort_order>4</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_secret>
						
						<api_email translate="label">
							<label>Merchant Email Address</label>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_email>
						
						<api_desc translate="label">
							<label>Payment Page Description</label>
							<frontend_type>text</frontend_type>
							<sort_order>6</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
						</api_desc>
						
						<sort_order translate="label">
							<label>Sort Order</label>
							<frontend_type>text</frontend_type>
							<sort_order>9</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Customize the order of the Coins PH plugin relative to other payment plugins.</comment>
						</sort_order>
						<pay_url translate="label">
							<label>Payment Gateway URL</label>
							<frontend_type>text</frontend_type>
							<sort_order>10</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>0</show_in_store>
							<comment>Ex: https://coins.ph/pay, https://dev.coins.ph/pay</comment>
						</pay_url>
					</fields>
				</Gateway>
			</groups>
		</payment>
	</sections>
</config>